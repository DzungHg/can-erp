@page "/add-tbl-gn-payment-type"
@layout MainLayout
@inherits ErpCan.Pages.AddTblGnPaymentTypeComponent

@using Radzen
@using Radzen.Blazor
@using ErpCan.Models.CanErpDbAt132
<RadzenContent Container="contentContainer0">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Data="@(tblgnpaymenttype)" TItem="ErpCan.Models.CanErpDbAt132.TblGnPaymentType" Visible="@(tblgnpaymenttype != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="PaymentType_ID" style="width: 100%" Text="Loại thanh toán ID">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="20" style="display: block; width: 100%" @bind-Value="@((tblgnpaymenttype.PaymentType_ID))" Name="PaymentType_ID">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="PaymentType_ID" style="position: absolute" Text="PaymentType_ID is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="PaymentTypeText" style="width: 100%" Text="Thanh toán kiểu">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="50" style="display: block; width: 100%" @bind-Value="@((tblgnpaymenttype.PaymentTypeText))" Name="PaymentTypeText">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="PaymentTypeText" style="position: absolute" Text="PaymentTypeText is required">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
