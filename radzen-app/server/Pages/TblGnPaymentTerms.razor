        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblGnPaymentTermsResult)" TItem="ErpCan.Models.CanErpDbAt132.TblGnPaymentTerm" RowSelect="@Grid0RowSelect">
