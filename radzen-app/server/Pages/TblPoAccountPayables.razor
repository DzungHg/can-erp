@page "/tbl-po-account-payables"
@layout MainLayout
@inherits ErpCan.Pages.TblPoAccountPayablesComponent

@using Radzen
@using Radzen.Blazor
@using ErpCan.Models.CanErpDbAt132
<RadzenContent Container="contentContainer0">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Po Account Payables">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblPoAccountPayablesResult)" TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="AP_No" Title="AP No" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="Vendor_FK" SortProperty="TblPoVendor.LastName" FilterProperty="TblPoVendor.LastName" Title="Tbl Po Vendor" Type="string">
              <Template Context="data">
              @data.TblPoVendor?.LastName
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="Transact_No" Title="Transact No" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="Record_Code" Title="Record Code" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="PO_No" Title="PO No" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Format="date-time" Property="Transact_Date" FormatString="{0:MM/dd/yyyy}" Title="Transact Date" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="Description" Title="Description" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Format="decimal" Property="Amount" Title="Amount" Type="number">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Property="Department_FK" SortProperty="TblGnDepartment.Deparment_Name" FilterProperty="TblGnDepartment.Deparment_Name" Title="Tbl Gn Department" Type="string">
              <Template Context="data">
              @data.TblGnDepartment?.Deparment_Name
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblPoAccountPayable" Context="erpCanModelsCanErpDbAt132TblPoAccountPayable" Filterable="false" Sortable="false" Bubble="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="erpCanModelsCanErpDbAt132TblPoAccountPayable">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, erpCanModelsCanErpDbAt132TblPoAccountPayable))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
