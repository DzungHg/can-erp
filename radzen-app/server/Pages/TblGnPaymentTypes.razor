@page "/tbl-gn-payment-types"
@layout MainLayout
@inherits ErpCan.Pages.TblGnPaymentTypesComponent

@using Radzen
@using Radzen.Blazor
@using ErpCan.Models.CanErpDbAt132
<RadzenContent Container="contentContainer0">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Gn Payment Types">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getTblGnPaymentTypesResult)" TItem="ErpCan.Models.CanErpDbAt132.TblGnPaymentType" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="ErpCan.Models.CanErpDbAt132.TblGnPaymentType" Context="erpCanModelsCanErpDbAt132TblGnPaymentType" Property="PaymentType_SEQ" Title="Payment Type SEQ" Type="integer">
            </RadzenGridColumn>
