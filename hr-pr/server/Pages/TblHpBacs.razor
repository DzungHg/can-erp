@page "/tbl-hp-bacs"
@layout MainLayout
@inherits CanErpHp.Pages.TblHpBacsComponent

@using Radzen
@using Radzen.Blazor
@using CanErpHp.Models.DbAtVdc2
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Hp Bacs">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getTblHpBacsResult" TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" Context="canErpHpModelsDbAtVdc2TblHpBac" Property="Bac_ID" Title="Bac ID">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" Context="canErpHpModelsDbAtVdc2TblHpBac" Property="Bac_Name" Title="Bac Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" Context="canErpHpModelsDbAtVdc2TblHpBac" Property="HeSoLuong" Title="He So Luong">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" Context="canErpHpModelsDbAtVdc2TblHpBac" Property="Ngach_FK" SortProperty="TblHpNgach.Ngach_Name" FilterProperty="TblHpNgach.Ngach_Name" Title="Tbl Hp Ngach">
              <Template Context="data">
              @(data.TblHpNgach?.Ngach_Name)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" Context="canErpHpModelsDbAtVdc2TblHpBac" Property="Description" Title="Description">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpBac" Context="canErpHpModelsDbAtVdc2TblHpBac" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="canErpHpModelsDbAtVdc2TblHpBac">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, canErpHpModelsDbAtVdc2TblHpBac))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
