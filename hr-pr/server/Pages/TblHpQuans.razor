@page "/tbl-hp-quans"
@layout MainLayout
@inherits CanErpHp.Pages.TblHpQuansComponent

@using Radzen
@using Radzen.Blazor
@using CanErpHp.Models.DbAtVdc2
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Hp Quans">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getTblHpQuansResult" TItem="CanErpHp.Models.DbAtVdc2.TblHpQuan" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpQuan" Context="canErpHpModelsDbAtVdc2TblHpQuan" Property="Quan_ID" Title="Quan ID">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpQuan" Context="canErpHpModelsDbAtVdc2TblHpQuan" Property="Quan_Name" Title="Quan Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpQuan" Context="canErpHpModelsDbAtVdc2TblHpQuan" Property="Description" Title="Description">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblHpQuan" Context="canErpHpModelsDbAtVdc2TblHpQuan" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="canErpHpModelsDbAtVdc2TblHpQuan">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, canErpHpModelsDbAtVdc2TblHpQuan))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
