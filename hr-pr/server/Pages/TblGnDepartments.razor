@page "/"
@page "/tbl-gn-departments"
@layout MainLayout
@inherits CanErpHp.Pages.TblGnDepartmentsComponent

@using Radzen
@using Radzen.Blazor
@using CanErpHp.Models.DbAtVdc2
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Gn Departments">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getTblGnDepartmentsResult" TItem="CanErpHp.Models.DbAtVdc2.TblGnDepartment" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblGnDepartment" Context="canErpHpModelsDbAtVdc2TblGnDepartment" Property="Department_ID" Title="Department ID">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblGnDepartment" Context="canErpHpModelsDbAtVdc2TblGnDepartment" Property="Deparment_Name" Title="Deparment Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblGnDepartment" Context="canErpHpModelsDbAtVdc2TblGnDepartment" Property="Description" Title="Description">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErpHp.Models.DbAtVdc2.TblGnDepartment" Context="canErpHpModelsDbAtVdc2TblGnDepartment" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="canErpHpModelsDbAtVdc2TblGnDepartment">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, canErpHpModelsDbAtVdc2TblGnDepartment))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
